<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/SpisItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="4dp"
    android:layout_marginTop="2dp"
    android:layout_marginEnd="4dp"
    android:layout_marginBottom="2dp"
    android:background="@drawable/spell_style">

    <TextView
        android:id="@+id/levelSpell"
        android:layout_width="65dp"
        android:layout_height="140dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:background="@drawable/spell_text_background"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/spell_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:layout_toEndOf="@+id/levelSpell"
        android:ellipsize="end"
        android:maxLines="3"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/duration_spell"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/distance_spell"
        android:layout_alignStart="@+id/spell_title"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="5dp"
        android:ellipsize="end"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="3dp"
        android:layout_above="@+id/distance_spell"
        android:layout_alignStart="@+id/spell_title"
        android:layout_alignEnd="@+id/spell_title"
        android:layout_marginBottom="2dp"
        android:background="@drawable/item_text_background" />

    <TextView
        android:id="@+id/distance_spell"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/spell_title"
        android:layout_alignBottom="@+id/levelSpell"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="5dp"
        android:ellipsize="end"
        android:maxLines="5"
        android:textColor="@color/white"
        android:textSize="20sp" />

</RelativeLayout>