<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.barFragments.AccountFragment"
    android:background="#31322E">

    <TextView
        android:id="@+id/name_game"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="30dp"
        android:textAlignment="center"
        android:text="@string/create_character"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/character_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:autofillHints="@string/name_character"
        android:hint="@string/name_character"
        android:inputType="textPersonName"
        android:selectAllOnFocus="true"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name_game" />

    <TextView
        android:id="@+id/health"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:text="@string/hp"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/character_name" />

    <EditText
        android:id="@+id/character_health"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:background="@drawable/hint_stile"
        android:layout_marginTop="5dp"
        android:layout_marginStart="15dp"
        android:textSize="20sp"
        android:textAlignment="center"
        android:autofillHints="@string/hp_hint"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:inputType="number"
        android:selectAllOnFocus="true"
        app:layout_constraintEnd_toEndOf="@+id/health"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/health" />

    <TextView
        android:id="@+id/body_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"
        android:text="@string/body_type"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/character_name" />

    <EditText
        android:id="@+id/character_body_type"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:autofillHints="@string/hp_hint"
        android:background="@drawable/hint_stile"
        android:inputType="number"
        android:selectAllOnFocus="true"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/body_type"
        app:layout_constraintStart_toStartOf="@+id/body_type"
        app:layout_constraintTop_toBottomOf="@+id/body_type" />

    <TextView
        android:id="@+id/agility"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:text="@string/agility"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintEnd_toStartOf="@+id/body_type"
        app:layout_constraintTop_toBottomOf="@+id/character_name" />

    <EditText
        android:id="@+id/character_agility"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:autofillHints="@string/hp_hint"
        android:background="@drawable/hint_stile"
        android:inputType="number"
        android:selectAllOnFocus="true"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/body_type"
        app:layout_constraintStart_toStartOf="@+id/agility"
        app:layout_constraintTop_toBottomOf="@+id/agility" />

    <TextView
        android:id="@+id/power"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:text="@string/power"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintEnd_toStartOf="@+id/agility"
        app:layout_constraintStart_toEndOf="@+id/health"
        app:layout_constraintTop_toBottomOf="@+id/character_name" />

    <EditText
        android:id="@+id/character_power"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:autofillHints="@string/hp_hint"
        android:background="@drawable/hint_stile"
        android:inputType="number"
        android:selectAllOnFocus="true"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/agility"
        app:layout_constraintStart_toStartOf="@+id/power"
        app:layout_constraintTop_toBottomOf="@+id/power" />

    <TextView
        android:id="@+id/intellect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/intellect"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@+id/body_type"
        app:layout_constraintTop_toBottomOf="@+id/character_body_type" />

    <EditText
        android:id="@+id/character_intellect"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:autofillHints="@string/hp_hint"
        android:background="@drawable/hint_stile"
        android:inputType="number"
        android:selectAllOnFocus="true"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/body_type"
        app:layout_constraintStart_toStartOf="@+id/body_type"
        app:layout_constraintTop_toBottomOf="@+id/intellect" />

    <TextView
        android:id="@+id/charisma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"
        android:text="@string/charisma"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintEnd_toStartOf="@+id/body_type"
        app:layout_constraintStart_toStartOf="@+id/agility"
        app:layout_constraintTop_toBottomOf="@+id/character_agility" />

    <EditText
        android:id="@+id/character_charisma"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:autofillHints="@string/hp_hint"
        android:background="@drawable/hint_stile"
        android:inputType="number"
        android:selectAllOnFocus="true"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/body_type"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/agility"
        app:layout_constraintTop_toBottomOf="@+id/charisma" />

    <TextView
        android:id="@+id/wisdom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/wisdom"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintEnd_toStartOf="@+id/agility"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="@+id/power"
        app:layout_constraintTop_toBottomOf="@+id/character_power" />

    <EditText
        android:id="@+id/character_wisdom"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:autofillHints="@string/hp_hint"
        android:background="@drawable/hint_stile"
        android:inputType="number"
        android:selectAllOnFocus="true"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/agility"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/wisdom"
        app:layout_constraintTop_toBottomOf="@+id/wisdom" />

    <EditText
        android:id="@+id/character_pict"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:autofillHints="@string/url_character"
        android:hint="@string/url_character"
        android:inputType="textPersonName"
        android:selectAllOnFocus="true"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/character_charisma" />

    <Button
        android:id="@+id/button_class"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginEnd="15dp"
        android:backgroundTint="#985921"
        android:textSize="12sp"
        android:text="@string/more_class"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/character_pict" />

    <Spinner
        android:id="@+id/spinner_class"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/hint_stile"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/button_class"
        app:layout_constraintEnd_toStartOf="@+id/button_class"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/button_class" />

    <Button
        android:id="@+id/button_race"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:backgroundTint="#985921"
        android:layout_marginTop="5dp"
        android:text="@string/more_race"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/button_class"
        app:layout_constraintStart_toStartOf="@+id/button_class"
        app:layout_constraintTop_toBottomOf="@+id/button_class" />

    <Spinner
        android:id="@+id/spinner_race"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/hint_stile"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/button_race"
        app:layout_constraintEnd_toStartOf="@+id/button_race"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/button_race" />

    <Button
        android:id="@+id/button_var_race"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:backgroundTint="#985921"
        android:layout_marginTop="5dp"
        android:text="@string/more_var_race"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/button_class"
        app:layout_constraintStart_toStartOf="@+id/button_class"
        app:layout_constraintTop_toBottomOf="@+id/button_race" />

    <Spinner
        android:id="@+id/spinner_var_race"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/hint_stile"
        app:layout_constraintBottom_toBottomOf="@+id/button_var_race"
        app:layout_constraintEnd_toStartOf="@+id/button_var_race"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/button_var_race" />

    <Button
        android:id="@+id/button_weap"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:backgroundTint="#985921"
        android:layout_marginTop="5dp"
        android:text="@string/more_weap"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/button_class"
        app:layout_constraintStart_toStartOf="@+id/button_class"
        app:layout_constraintTop_toBottomOf="@+id/button_var_race" />

    <Spinner
        android:id="@+id/spinner_weap"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/hint_stile"
        app:layout_constraintBottom_toBottomOf="@+id/button_weap"
        app:layout_constraintEnd_toStartOf="@+id/button_weap"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/button_weap" />

    <Spinner
        android:id="@+id/spinner_arm"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/hint_stile"
        app:layout_constraintBottom_toBottomOf="@+id/button_arm"
        app:layout_constraintEnd_toStartOf="@+id/button_weap"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_weap" />

    <Button
        android:id="@+id/button_arm"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:backgroundTint="#985921"
        android:layout_marginTop="5dp"
        android:text="@string/more_arm"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/button_class"
        app:layout_constraintStart_toStartOf="@+id/button_class"
        app:layout_constraintTop_toBottomOf="@+id/button_weap" />

    <EditText
        android:id="@+id/notes"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:autofillHints="@string/name_character"
        android:background="@drawable/hint_stile"
        android:gravity="top"
        android:hint="@string/notes_character"
        android:inputType="textMultiLine"
        android:selectAllOnFocus="true"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/save_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_arm" />

    <Button
        android:id="@+id/save_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:text="@string/save_character"
        android:backgroundTint="#985921"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>